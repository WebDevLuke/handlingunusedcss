{
  "name": "handlingunusedcsswithsassboilerplate",
  "version": "1.0.0",
  "description": "A boilerplate to follow along 'Handing Unused CSS with SASS' article",
  "scripts": {
    "clean": "rimraf dist/static/*.css",
    "build:css": "node build/css.js",
    "watch:css": "onchange \"src/assets/scss/*.scss\" \"src/assets/scss/*/**.scss\" -- npm run build:css",
    "build": "npm run clean && npm run build:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebDevLuke/HandlingUnusedCSSWithSASSBoilerplate.git"
  },
  "author": "Luke Harrison",
  "license": "MIT",
  "devDependencies": {
    "glob": "7.1.3",
    "node-sass": "4.11.0",
    "onchange": "5.2.0",
    "rimraf": "2.6.3"
  }
}
